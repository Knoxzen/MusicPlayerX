<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/musicNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/default_album_art"
        android:src="@drawable/_600w_1nr6gsundkw"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:contentDescription="@string/albumart" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/skipPrevBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/baseline_skip_previous_24"
            android:contentDescription="@string/skipprevbtn" />

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/baseline_play_arrow_24"
            android:contentDescription="@string/playbtn" />

        <ImageButton
            android:id="@+id/skipNextBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_skip_next_24"
            android:contentDescription="@string/skipnextbtn" />

    </LinearLayout>

</LinearLayout>